<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>@ViewData["Title"] - Tool for Production Support (TPS) | Dynamo ERP</title>

    <link rel="icon" href="~/img/tps/fav.png" type="image/png">
    <script>
        //var isChrome = /Chrome/.test(navigator.userAgent) && /Google Inc/.test(navigator.vendor);
        //if (isChrome) {
        //    document.write('<' + 'link rel="stylesheet" href="/css/chrome.css" />');
        //}
    </script>
    <link href="~/vendor/fonts/roboto/css.css" rel="stylesheet">
    <link href="~/vendor/fonts/BAUHS93/font.css" rel="stylesheet">
    <link href="~/vendor/fonts/roboto/css300.css" rel="stylesheet">
    <link rel="stylesheet" href="~/vendor/nucleo/css/nucleo.css">
    <link rel="stylesheet" href="~/vendor/fontawesome/css/all.min.css">
    <link href="~/vendor/jquery-confirm/css/jquery-confirm.css" rel="stylesheet" type="text/css" />

    @* Page Plugin *@

    @RenderSection("Css", required: false)
    <link rel="stylesheet" href="~/css/dynamo.css" type="text/css">
    <link rel="stylesheet" href="~/css/style.css" type="text/css">

    @RenderSection("Sole", required: false)
</head>

<body>

    <div>
        <partial name="_CookieConsentPartial" />
        <main role="main" class="pb-3">
            @RenderBody()
            <partial name="_Footer" />
        </main>
    </div>

    <script src="~/vendor/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/vendor/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="~/vendor/bootstrap-notify/bootstrap-notify.min.js" asp-append-version="true"></script>
    <script src="~/vendor/js-cookie/js.cookie.js" asp-append-version="true"></script>

    @RenderSection("datetimepicker", required: false)

    <script src="~/vendor/jquery.scrollbar/jquery.scrollbar.min.js" asp-append-version="true"></script>
    <script src="~/vendor/jquery-scroll-lock/dist/jquery-scrollLock.min.js" asp-append-version="true"></script>
    <script src="~/lib/aspnet/signalr/dist/browser/signalr.js"></script>

    <script src="~/vendor/jquery-confirm/js/jquery-confirm.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)

    <script src="~/js/argon.min.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        $('.logout-confirm').confirm({
            icon: 'fa fa-power-off',
            title: 'Logout?',
            theme: 'dark',
            animation: 'zoom',
            closeAnimation: 'zoom',
            backgroundDismiss: true,
            closeIcon: true,
            type: 'blue',
            buttons: {

                Yes: {
                    text: 'yes',
                    btnClass: 'btn-primary',
                    action: function () {
                        location.href = this.$target.attr('href');
                    },
                },
                no: {
                    text: 'no',
                    action: function () {
                        //
                    }
                }
            }

        });
    </script>
</body>
</html>
