@model DecathlonDynamoErpApp.Models.ViewModel.LoginViewModel

@{
    Layout = "~/Views/Shared/_Slider.cshtml";
}

@{
    ViewData["Title"] = "Login";
}

@section Sole {

    <link asp-append-version="true" rel="stylesheet" href="~/css/login.css" />
    <link asp-append-version="true" rel="stylesheet" href="~/vendor/fonts/roboto-condensed/css.css">
    <link asp-append-version="true" rel="stylesheet" href="~/css/login2.css" />
    <style>
        .logo-spin-tps {
            width: 100px;
            left: 35%;
            top: -15px;
        }

        .tps-outer {
            width: 100px;
            -webkit-animation: spin 10s linear infinite;
            -moz-animation: spin 10s linear infinite;
            animation: spin 10s linear infinite;
        }

        .tps-inner {
            width: 100px;
        }

        .logo-header {
            height: 120px;
        }

        @@-moz-keyframes spin {
            100% {
                -moz-transform: rotate(360deg);
            }
        }

        @@-webkit-keyframes spin {
            100% {
                -webkit-transform: rotate(360deg);
            }
        }

        @@keyframes spin {
            100% {
                -webkit-transform: rotate(360deg);
                transform: rotate(360deg);
            }
        }

        .version {
            right: 15px;
            font-size: 11px;
        }

        .text-motto {
            color: #3C54A5 !important;
            margin: 0 auto;
            width: 21%;
            background: #DBE5EC;
            width: 210px;
            font-family: 'Roboto Condensed', sans-serif;
            font-size: 11px;
            font-weight: 400;
            line-height: 1.5;
        }

        .decathlon-logo {
            min-height: 59px;
        }
    </style>
}

<main class="mobile-login">
    <div class="container-fluid p-0">
        <div id="carouselExampleIndicators" class="carousel slide carousel-fade d-none d-lg-block" data-ride="carousel" data-interval="3000" data-pause="false">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="5"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="6"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="7"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="8"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="9"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="10"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img asp-append-version="true" src="~/img/mobile-login/1.jpg" class="d-block w-100" alt="">
                </div>
                <div class="carousel-item">
                    <img asp-append-version="true" src="~/img/mobile-login/2.jpg" class="d-block w-100" alt="">
                </div>
                <div class="carousel-item">
                    <img asp-append-version="true" src="~/img/login/1.jpg" class="d-block w-100" alt="">
                </div>
                <div class="carousel-item">
                    <img asp-append-version="true" src="~/img/login/2.jpg" class="d-block w-100" alt="">
                </div>
                <div class="carousel-item">
                    <img asp-append-version="true" src="~/img/login/4.jpg" class="d-block w-100" alt="">
                </div>
                <div class="carousel-item">
                    <img asp-append-version="true" src="~/img/login/5.jpg" class="d-block w-100" alt="">
                </div>
                <div class="carousel-item">
                    <img asp-append-version="true" src="~/img/login/6.jpg" class="d-block w-100" alt="">
                </div>
                <div class="carousel-item">
                    <img asp-append-version="true" src="~/img/login/10.jpg" class="d-block w-100" alt="">
                </div>
                <div class="carousel-item">
                    <img asp-append-version="true" src="~/img/login/12.jpg" class="d-block w-100" alt="">
                </div>
                <div class="carousel-item">
                    <img asp-append-version="true" src="~/img/login/13.jpg" class="d-block w-100" alt="">
                </div>
                <div class="carousel-item">
                    <img asp-append-version="true" src="~/img/login/15.jpg" class="d-block w-100" alt="">
                </div>

            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</main>

<section id="main" class="position-absolute d-lg-none d-block">
    <div class="wrapper fadeInDown">
        <div id="formContent" class="form-content">
            <div class="fadeIn first mt-4 mb-4 logo-header">
                <div class="logo-spin-tps position-relative m-auto">
                    <img asp-append-version="true" class="tps-outer" src="~/img/new-logo/logo-outer2.png" alt="" />
                    <img asp-append-version="true" class="position-absolute tps-inner" src="~/img/new-logo/logo-inner.png" alt="" />
                </div>
                <div class="text-center mt-2">
                    <small>Tool for Production Support</small>
                </div>
            </div>

            <form asp-action="Login" asp-controller="Account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input placeholder="User Name" asp-for="UserName" class="fadeIn second login" autocomplete="off">
                <span asp-validation-for="UserName" class="text-danger"></span>

                <input placeholder="Password" asp-for="Password" class="fadeIn third password" autocomplete="off">
                <span asp-validation-for="Password" class="text-danger"></span>

                <input type="submit" class="fadeIn fourth" value="Log In">

                <div id="formFooter">
                    <div class="custom-control custom-control-alternative custom-checkbox underlineHover ml-6 pl-0 mr-6">
                        <input class="custom-control-input" asp-for="RememberMe" />
                        <label class="custom-control-label ml-3 mb-3" asp-for="RememberMe">
                            <span class="remember-me">Remember Me?</span>
                        </label>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>

<section class="login-main position-absolute d-lg-block d-none">
    <div class="mt-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-11 login-form">
                    <div class="row flex">
                        <div class="col-md-5 pl-0">
                            <div class="login-left flex">
                                <p class="modal-title">
                                    <b>SIGN IN</b>
                                </p>
                                <div class="login-left-middle">
                                    <div class="d-flex flex-column justify-content-center align-items-center">
                                        <img asp-append-version="true" class="decathlon-logo" src="~/img/brand/footer_logo.svg" alt="" />
                                        <small class="text-uppercase text-motto ls-1">Sport for all | all for sport</small>
                                        <p class="mt-3">
                                            <span class="sign-head">
                                                To sustainably make the pleasure and benefits of sport accessible to the many.
                                            </span>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-7">
                            <div id="loginform" class="form-horizontal">
                                <div class="clearfix form-group">
                                    <div class="">
                                        <div class="logo-spin-tps position-relative">
                                            <img asp-append-version="true" class="position-absolute tps-outer" src="~/img/new-logo/logo-outer2.png" alt="" />
                                            <img asp-append-version="true" class="position-absolute tps-inner" src="~/img/new-logo/logo-inner.png" alt="" />
                                        </div>
                                        <div class="tps_message text-uppercase">Tool for Production Support</div>
                                    </div>
                                </div>
                                <div style="margin-bottom: 7rem;">

                                </div>
                                <form class="pt-3" asp-action="Login" asp-controller="Account" method="post" asp-route-returnUrl="@ViewBag.ReturnUrl">
                                    <div class="position-relative text-center restricted">
                                        <span class="badge badge-danger rounded">This page is restricted</span>
                                    </div>
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="clearfix form-group">
                                        <div class="">
                                            <input asp-for="UserName" class="login-username form-control login" placeholder="Enter your user name" autocomplete="off">
                                            <span asp-validation-for="UserName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="clearfix form-group">
                                        <div class="">
                                            <input asp-for="Password" class="login-password form-control password" placeholder="Password" autocomplete="off">
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="clearfix form-group frm_btn">
                                        <div class=" ">
                                            <button type="submit" id="presta-btn-login" class="orange-btn">
                                                <span>Login</span>
                                            </button>
                                        </div>
                                    </div>
                                </form>
                                <h6 class="small position-absolute version">V 1.0</h6>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>